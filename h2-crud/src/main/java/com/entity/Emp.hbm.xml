<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.entity.Emp" table="emp" schema="boode">
        <id name="empno">
            <column name="empno" sql-type="int(10)"/>
        </id>
        <property name="ename">
            <column name="ename" sql-type="varchar(10)" length="10" not-null="true"/>
        </property>
        <property name="job">
            <column name="job" sql-type="varchar(9)" length="9" not-null="true"/>
        </property>
        <property name="mrg">
            <column name="mrg" sql-type="int(10)" not-null="true"/>
        </property>
        <property name="hiredate">
            <column name="hiredate" sql-type="date(10)" not-null="true"/>
        </property>
        <property name="sal">
            <column name="sal" sql-type="double(7,2)" precision="7" scale="2" not-null="true"/>
        </property>
        <property name="comm">
            <column name="comm" sql-type="double(7,2)" precision="7" scale="2" not-null="true"/>
        </property>
        <property name="deptno">
            <column name="deptno" sql-type="int(10)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>
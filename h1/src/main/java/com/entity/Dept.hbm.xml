<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.entity.Dept" table="dept" schema="boode">
        <id name="deptno">
            <column name="deptno" sql-type="tinyint(3)"/>
        </id>
        <property name="dname">
            <column name="dname" sql-type="varchar(14)" length="14" not-null="true"/>
        </property>
        <property name="loc">
            <column name="loc" sql-type="varchar(13)" length="13" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>